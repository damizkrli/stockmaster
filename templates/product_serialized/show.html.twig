{% extends 'base.html.twig' %}

{% block title %}ProductSerialized{% endblock %}

{% block body %}
    <div class="container mydiv">
        <div class="row d-flex align-item-center justify-content-center">
            <div class="col-md-4">
                <!-- bbb_deals -->
                <div class="bbb_deals">
                    <div class="ribbon ribbon-top-right">
                        <span {% if productsSerialized.quantity < 3 %}style="background-color: red" {% endif %}>
                            <small class="cross">x</small>{{ productsSerialized.quantity }}
                        </span>
                    </div>
                    <div class="bbb_deals_slider_container">
                        <div class=" bbb_deals_item">
                            <div class="bbb_deals_image"><img src="https://media.extron.com/public/product/img/prodcat/prodtype09.png" alt="">
                            </div>
                            <div class="bbb_deals_content">
                                <div class="bbb_deals_info_line d-flex align-item-start justify-content-start">
                                    <div class="tag">
                                        {{ productsSerialized.brand | upper }}</div>
                                </div>
                                <div class="bbb_deals_info_line d-flex flex-row justify-content-start">
                                    <div class="bbb_deals_item_name">{{ productsSerialized.name | title }}</div>
                                </div>
                                <div class="bbb_deals_info_line d-flex flex-row justify-content-start">
                                    <div class="bbb_deals_item_category">Ref : {{ productsSerialized.reference }}</div>
                                </div>
                                <div class="d-flex flex-row justify-content-start">
                                    <div class="bbb_deals_item_category">SN
                                        : {{ productsSerialized.serialNumber }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex align-items-center justify-content-center">
        <button class="btn btn-dark btn-sm" style="color: white">
            <a class="text-decoration-none" href="{{ path('productSerialized') }}">Retour</a>
        </button>
    </div>
{% endblock %}
