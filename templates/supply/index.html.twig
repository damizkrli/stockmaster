{% extends 'base.html.twig' %}

{% block title %}FOURNITURES{% endblock %}

{% block body %}

    {% include 'layout/_toast.html.twig' %}

    {% include 'layout/_tabs.html.twig' %}

    <div class="container">

        <div class="title">
            <h2 class="start me-3">
                <button type="button" class="btn btn-outline-dark btn-sm" data-bs-toggle="modal"
                        data-bs-target="#addModal">
                    üì¶ Ajout de fournitures
                </button>
            </h2>
        </div>

        <div class="export">
            <a href="{{ path('export_supply_pdf') }}" target="_blank" class="btn btn-outline-black btn-sm">
                <i class="fa-regular fa-file-pdf"></i>
                Export PDF
            </a>
        </div>

        <div class="form-check form-switch mb-3">
            <input class="form-check-input" type="checkbox" id="hideZeroCheckbox">
            <label class="form-check-label" for="hideZeroCheckbox">Masquer les fournitures en rupture</label>
        </div>

        <table class="table table-hover">
            <thead>
            <tr>
                <th class="start">Qt√©</th>
                <th class="little-cells">Marque</th>
                <th class="little-cells">D√©signation</th>
                <th class="little-cells">R√©f√©rence</th>
                <th class="little-cells">Entr√©e en stock</th>
                <th class="center" colspan="2">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for supply in supplies %}
                <tr {% if supply.quantity == 0 %}class="zero-quantity"{% endif %}>
                    <td class="start">{{ supply.quantity }},00</td>
                    <td>{{ supply.brand | title }}</td>
                    <td>{{ supply.name | title }}</td>
                    <td>{{ supply.reference }}</td>
                    <td>{{ supply.addedAt ? supply.addedAt|date('d/m/y') }}</td>
                    <td class="end me-0 buttons">
                        <button class="btn btn-outline-dark btn-sm me-2"
                                onclick="copyToClipboard(this)">
                            <i class="fa-regular fa-copy"></i>
                        </button>
                        <button class="btn btn-outline-dark btn-sm me-2">
                            <a class="text-decoration-none" href="{{ path('edit_supply', {'id': supply.id}) }}">
                                <i class="fa-regular fa-pen-to-square"></i>
                            </a>
                        </button>
                        {{ include('supply/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% endfor %}

            {% include 'layout/modal/_modal_add_supply.html.twig' %}

            </tbody>
        </table>
    </div>

    {% include 'layout/script/export.html.twig' %}

    {% include 'layout/script/clipboard.html.twig' %}

    {% include 'layout/script/toast.html.twig' %}

{% endblock %}