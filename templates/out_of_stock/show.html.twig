{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mydiv">
        <div class="row d-flex align-item-center justify-content-center">
            <div class="col-md-4">
                <!-- bbb_deals -->
                <div class="bbb_deals">
                    <div class="ribbon ribbon-top-left">
                        <span {% if out_of_stock.quantity < 3 %}style="background-color: red" {% endif %}>
                            <small class="cross">x</small>{{ out_of_stock.quantity }}
                        </span>
                    </div>
                    <div class="d-flex align-item-end justify-content-end">
                        <span>
                            <a class="btn btn-sm"
                               href="{{ path('edit_out_of_stock', {'id': out_of_stock.id }) }}">
                                <i class="fa-regular fa-pen-to-square"></i>
                            </a>
                        </span>
                    </div>
                    <div class="bbb_deals_slider_container">
                        <div class=" bbb_deals_item">
                            <div class="bbb_deals_image"><img
                                        src="https://media.extron.com/public/product/img/prodcat/prodtype09.png" alt="">
                            </div>
                            <div class="bbb_deals_content">
                                <div class="bbb_deals_info_line d-flex align-item-start justify-content-start">
                                    <div class="tag">
                                        {{ out_of_stock.brand | upper }}</div>
                                </div>
                                <div class="bbb_deals_info_line d-flex flex-row justify-content-start">
                                    <div class="bbb_deals_item_name">{{ out_of_stock.name | title }}</div>
                                </div>
                                <div class="bbb_deals_info_line d-flex flex-row justify-content-start">
                                    <div class="bbb_deals_item_category">Ref : {{ out_of_stock.reference }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex align-items-center justify-content-center">
        <a class="btn btn-dark btn-sm text-decoration-none" href="{{ path('out_of_stock') }}">Retour</a>
    </div>
{% endblock %}
