{% extends 'base.html.twig' %}

{% block body %}

    {% include 'layout/_toast.html.twig' %}

    {% include 'layout/_tabs.html.twig' %}

    <div class="p-4">

        {% include '/layout/taskbars/_out_of_stock_taskbar.html.twig' %}

        <div id="loading-overlay" class="loading" style="display: none;">
            <div class="spinner d-flex align-items-center justify-content-center"></div>
            <h2 class="center">Chargement en cours...</h2>
        </div>

        <table class="table table-hover" style="display: none;">
            <thead>
            <tr>
                <th>
                    <div class="form-check d-flex align-items-center justify-content-start">
                        <input class="form-check-input" type="checkbox" id="selectAllCheckbox">
                        <label class="form-check-label" for="selectAllCheckbox"></label>
                    </div>
                </th>
                <th class="start little-cells" id="quantity-header">
                    <i class="fas fa-sort"></i>
                    Qté
                </th>
                <th class="medium-cells" id="brand-header">
                    <i class="fas fa-sort"></i>
                    Marque
                </th>
                <th class="medium-cells" id="name-header">
                    <i class="fas fa-sort"></i>
                    Désignation
                </th>
                <th class="medium-cells" id="reference-header">
                    Référence
                </th>
                <th class="medium-cells" id="added-at-header">
                    <i class="fas fa-sort"></i>
                    Date
                </th>
            </tr>
            </thead>
            <tbody id="table-body">
            {% for out_of_stock in out_of_stocks %}
                <tr data-out-of-stock-id="{{ out_of_stock.id }}" id="spinner-now"
                        {% if out_of_stock.quantity == 0 %}class="zero-quantity"{% endif %}>
                    <td>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="{{ out_of_stock.id }}"
                                   id="out_of_stockCheckbox{{ out_of_stock.id }}">
                            <label class="form-check-label" for="out_of_stockCheckbox{{ out_of_stock.id }}"></label>
                        </div>
                    </td>
                    <td class="start">{{ out_of_stock.quantity }},00</td>
                    <td>{{ out_of_stock.brand | title }}</td>
                    <td>{{ out_of_stock.name | title }}</td>
                    <td>{{ out_of_stock.reference }}</td>
                    <td>{{ out_of_stock.addedAt ? out_of_stock.addedAt|date('d/m/y') }}</td>
                </tr>
            {% endfor %}

            {% include 'layout/modal/_modal_add_out_of_stock.html.twig' %}

            </tbody>
        </table>

        <div class="pagination disable">
            {{ knp_pagination_render(out_of_stocks) }}
        </div>

    </div>

    {{ encore_entry_script_tags('spinner') }}
    {{ encore_entry_script_tags('filter') }}
    {{ encore_entry_script_tags('select') }}

{% endblock %}
