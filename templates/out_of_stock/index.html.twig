{% extends 'base.html.twig' %}

{% block title %}HORS-STOCK{% endblock %}

{% block body %}

    {% include 'layout/_toast.html.twig' %}

    {% include 'layout/_tabs.html.twig' %}

    <div class="container mt-5">

        <div class="d-flex flex-row align-items-center justify-content-start mb-4">
            <h2 class="text-start font-bold font-up deep-purple-text me-3">
                <button type="button" class="btn btn-outline-dark btn-sm" data-bs-toggle="modal"
                        data-bs-target="#addOutOfStockModal">
                    üì¶ Ajout de hors-stock
                </button>
            </h2>
        </div>

        <div class="d-flex align-items-end justify-content-end">
            <a href="{{ path('export_out_of_stock_pdf') }}" target="_blank" class="btn btn-outline-black btn-sm">
                <i class="fa-regular fa-file-pdf"></i>
                Export PDF
            </a>
        </div>

        <div class="form-check form-switch mb-3">
            <input class="form-check-input" type="checkbox" id="hideZeroCheckbox">
            <label class="form-check-label" for="hideZeroCheckbox">Masquer les produits non disponible</label>
        </div>

        <table class="table table-hover">
            <thead>
            <tr>
                <th class="text-start">Qt√©</th>
                <th style="width: 25%">Marque</th>
                <th style="width: 25%">D√©signation</th>
                <th style="width: 25%">R√©f√©rence</th>
                <th style="width: 25%">Entr√©e en stock</th>
                <td class="text-center fw-bold" colspan="2">Actions</td>
            </tr>
            </thead>
            <tbody>
            {% for out_of_stock in out_of_stocks %}
                <tr {% if out_of_stock.quantity == 0 %}class="zero-quantity"{% endif %}>
                    <td>{{ out_of_stock.quantity }},00</td>
                    <td>{{ out_of_stock.brand | title }}</td>
                    <td>{{ out_of_stock.name | title }}</td>
                    <td>{{ out_of_stock.reference }}</td>
                    <td>{{ out_of_stock.addedAt ? out_of_stock.addedAt|date('d/m/y') }}</td>
                    <td class="text-end me-0 d-flex align-items-center justify-content-evenly">
                        <button class="btn btn-outline-dark btn-sm exclude-from-clipboard me-2"
                                onclick="copyToClipboard(this)">
                            <i class="fa-regular fa-copy"></i>
                        </button>
                        <button class="btn btn-outline-dark btn-sm exclude-from-clipboard me-2">
                            <a class="text-decoration-none" href="{{ path('edit_out_of_stock', {'id': out_of_stock.id}) }}">
                                <i class="fa-regular fa-pen-to-square"></i>
                            </a>
                        </button>
                        {{ include('out_of_stock/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% endfor %}

            {% include 'layout/modal/_modal_add_out_of_stock.html.twig' %}

            </tbody>
        </table>
    </div>

    {% include 'layout/script/export.html.twig' %}

    {% include 'layout/script/toast.html.twig' %}

{% endblock %}
