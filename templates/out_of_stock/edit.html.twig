{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <h1>{{ out_of_stock.name | title }}</h1>

        <i>Quantité :</i>
        {{ form_row(form.quantity) }}
        {{ form_start(form) }}
        <i>Désignation :</i>
        {{ form_row(form.name) }}
        <i>Référence :</i>
        {{ form_row(form.reference) }}
        <i>Marque :</i>
        {{ form_row(form.brand) }}
        <div class="d-grid gap-2 d-md-block">
            <button class="btn btn-dark btn-sm">{{ button_label|default('Enregistrer') }}</button>
            {{ form_end(form) }}
            <a class="btn btn-dark btn-sm" href="{{ path('productSerialized') }}">Retour</a>

        </div>
    </div>

    {#        {{ include('product_serialized/_delete_form.html.twig') }} #}

{% endblock %}