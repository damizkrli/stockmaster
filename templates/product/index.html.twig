{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
   <div class="container">

       <div class="container mt-5">
           <h2 class="pb-4 text-start font-bold font-up deep-purple-text">STOCK</h2>

           <div class="container text-center">
               {{ form_start(form) }}
               <div class="row mb-3 flex align-items-center justify-content-center">
                   <div class="col">{{ form_row(form.quantity, {'attr': { 'class': 'rounded-3' }}) }}</div>
                   <div class="col">{{ form_row(form.brand, {'attr': { 'class': 'rounded-3' }}) }}</div>
                   <div class="col">{{ form_row(form.name, {'attr': { 'class': 'rounded-3' }}) }}</div>
                   <div class="col">{{ form_row(form.reference, {'attr': { 'class': 'rounded-3' }}) }}</div>
                   <div class="col">{{ form_row(form.serial_number, {'attr': { 'class': 'rounded-3' }}) }}</div>
                   <button class="col btn btn-dark">{{ button_label|default('Valider') }}</button>
               </div>
               {{ form_end(form) }}
           </div>

           <div class="rounded-3">
               <table class="table border border-2 table-hover">
                   <thead style="background-color: darkgray;">
                   <tr>
                       <th class="text-center">Quantité</th>
                       <th class="text-center">Marque</th>
                       <th class="text-center">Désignation</th>
                       <th class="text-center">Référence</th>
                       <th class="text-center">Numéro de série</th>
                       <th class="text-center">Entrée en stock</th>
                   </tr>
                   </thead>
                   {% for product in products %}
                       <tbody>
                       {% include 'layout/conditions/productOff.php' %}
                       </tbody>
                   {% endfor %}
               </table>
           </div>
       </div>
