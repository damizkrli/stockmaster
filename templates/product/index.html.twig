{% extends 'base.html.twig' %}

{% block title %}STOCK{% endblock %}

{% block body %}

    {% include 'layout/_toast.html.twig' %}

    {% include 'layout/_tabs.html.twig' %}

    <div class="container mt-5">

        <div class="d-flex flex-row align-items-center justify-content-start mb-4">
            <h2 class="text-start font-bold font-up deep-purple-text me-3">
                <button type="button" class="btn btn-outline-dark btn-sm" data-bs-toggle="modal"
                        data-bs-target="#addModal">
                    üì¶ Ajout de stock
                </button>
            </h2>
        </div>

        <div class="d-flex align-items-end justify-content-end">
            <a href="{{ path('export_product_pdf') }}" target="_blank" class="btn btn-outline-black btn-sm">
                <i class="fa-regular fa-file-pdf"></i>
                Export PDF
            </a>
        </div>

        <div class="form-check form-switch mb-3">
            <input class="form-check-input" type="checkbox" id="hideZeroCheckbox">
            <label class="form-check-label" for="hideZeroCheckbox">Masquer les produits en rupture</label>
        </div>

        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th class="text-center">Marque</th>
                <th class="text-center">D√©signation</th>
                <th class="text-center">R√©f√©rence</th>
                <th class="text-center">Num√©ro de s√©rie</th>
                <th class="text-center">Entr√©e en stock</th>
                <th class="text-center">Qt√©</th>
                <td class="text-center fw-bold" colspan="2">Actions</td>
            </tr>
            </thead>
            <tbody>
            <tr>
                {% for product in products %}
            <tr {% if product.quantity == 0 %}class="zero-quantity"{% endif %}>
                <td class="text-center">{{ product.brand | title }}</td>
                <td class="text-center">{{ product.name | title }}</td>
                <td class="text-center">{{ product.reference }}</td>
                <td class="text-center">{{ product.serialNumber }}</td>
                <td class="text-center">{{ product.addedAt ? product.addedAt|date('d/m/y') }}</td>
                <td class="text-center">{{ product.quantity }}</td>
                <td class="text-end me-0 d-flex align-items-center justify-content-evenly">
                    <button class="btn btn-outline-dark btn-sm exclude-from-clipboard" onclick="copyToClipboard(this)">
                        <i class="fa-regular fa-copy"></i>
                    </button>
                    <button class="btn btn-outline-dark btn-sm exclude-from-clipboard">
                        <a class="text-decoration-none" href="{{ path('edit_supply', {'id': product.id}) }}">
                            <i class="fa-regular fa-pen-to-square"></i>
                        </a>
                    </button>
                    {{ include('product/_delete_form.html.twig') }}
                </td>

            </tr>
            {% endfor %}

            {% include 'layout/modal/_modal_add_product.html.twig' %}

            </tbody>
        </table>
    </div>

    {% include 'layout/script/export.html.twig' %}

    {% include 'layout/script/clipboard.html.twig' %}

{% endblock %}