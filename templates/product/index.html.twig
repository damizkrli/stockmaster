{% extends 'base.html.twig' %}

{% block title %}STOCKMASTER{% endblock %}

{% block body %}

    {% include 'layout/_toast.html.twig' %}

    {% include 'layout/_tabs.html.twig' %}

    <div class="container">

        <div id="loading-overlay" class="loading" style="display: none;">
            <div class="spinner d-flex align-items-center justify-content-center"></div>
            <h2 class="center">Chargement en cours...</h2>
        </div>

        <div class="mb-2">
            <button type="button" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal"
                    data-bs-target="#addModal">
                Ajout de stock
            </button>
            <button class="btn btn-outline-danger btn-sm">Supprimer</button>
            <button class="btn btn-outline-dark btn-sm">
                <a href="{{ path('export_product_pdf') }}" target="_blank" style="text-decoration: none">
                    Exporter en PDF
                </a>
            </button>
            <button id="selectAllCheckbox" class="btn btn-outline-info btn-sm">Tout sélectionner</button>
        </div>

        <table class="table table-hover" style="display: none;">
            <thead>
            <tr>
                <th></th>
                <th class="start little-cells" id="quantity-header">
                    <i class="fas fa-sort"></i>
                    Qté
                </th>
                <th class="little-cells" id="brand-header">
                    <i class="fas fa-sort"></i>
                    Marque
                </th>
                <th class="little-cells" id="name-header">
                    <i class="fas fa-sort"></i>
                    Désignation
                </th>
                <th class="little-cells" id="reference-header">
                    Référence
                </th>
                <th class="little-cells" id="serial-number-header">
                    Numéro de série
                </th>
                <th class="medium-cells" id="added-at-header">
                    <i class="fas fa-sort"></i>
                    Date
                </th>
            </tr>
            </thead>
            <tbody id="table-body">
            {% for product in products %}
                <tr data-product-id="{{ product.id }}" id="spinner-row"
                    {% if product.quantity > 5 %}class="zero-quantity"{% endif %}>
                    <td>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="{{ product.id }}"
                                   id="productCheckbox{{ product.id }}">
                            <label class="form-check-label" for="productCheckbox{{ product.id }}"></label>
                        </div>
                    </td>
                    <td class="start">{{ product.quantity }},00</td>
                    <td>{{ product.brand | title }}</td>
                    <td>{{ product.name | title }}</td>
                    <td>{{ product.reference }}</td>
                    <td>{{ product.serialNumber }}</td>
                    <td>{{ product.addedAt ? product.addedAt|date('d/m/Y') }}</td>
                </tr>
            {% endfor %}

            {% include 'layout/modal/_modal_add_product.html.twig' %}

            </tbody>
        </table>

        <div class="pagination disable">
            {{ knp_pagination_render(products) }}
        </div>

    </div>

    {{ encore_entry_script_tags('spinner') }}
    {{ encore_entry_script_tags('filter') }}
    {{ encore_entry_script_tags('select') }}

{% endblock %}
