{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <h1>{{ products.name | title }}</h1>

        {{ form_start(form) }}
        <div class="row">
            <div class="col-2">
                <i>Quantité</i>
                {{ form_row(form.quantity) }}
            </div>
            <div class="col-10">
                <i>Désignation :</i>
                {{ form_row(form.name) }}
            </div>
        </div>

        <div class="row">
            <div class="col-4">
                <i>Référence :</i>
                {{ form_row(form.reference) }}
            </div>
            <div class="col-4">
                <i>Marque :</i>
                {{ form_row(form.brand) }}
            </div>
            <div class="col-4">
                <i>Numéro de série :</i>
                {{ form_row(form.serial_number) }}
            </div>
        </div>

        <i>Description</i>
        {{ form_row(form.description) }}
        <div class="d-grid gap-2 d-md-block">
            <button class="btn btn-primary btn-sm">{{ button_label|default('Enregistrer') }}</button>
            {{ form_end(form) }}
            <a class="btn btn-dark btn-sm" href="{{ path('product') }}">Retour</a>
        </div>
    </div>

{% endblock %}
