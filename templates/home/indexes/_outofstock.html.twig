    <h2 class="title end">HORS-STOCK
        <i class="fa-solid fa-cubes-stacked" style="color: #383d4b;"></i>
    </h2>
    <table class="table">
        <thead>
        <tr>
            <th class="center"></th>
            <th class="start">Qté</th>
            <th class="medium-cells">Marque</th>
            <th class="medium-cells">Désignation</th>
            <th class="medium-cells">Référence</th>
            <th class="medium-cells">Entrée en stock</th>
        </tr>
        </thead>
        {% for outOfStock in outOfStocks %}
            <tbody>
            {% if outOfStock.quantity < 2 %}
                <tr>
                    <td class="center">
                        <i class="fa-solid fa-circle-exclamation danger"></i>
                    </td>
                    <td class="start">{{ outOfStock.quantity }},00</td>
                    <td>{{ outOfStock.brand | upper }}</td>
                    <td>{{ outOfStock.name | upper }}</td>
                    <td>{{ outOfStock.reference | upper }}</td>
                    <td>{{ outOfStock.addedAt ? outOfStock.addedAt|date('Y-m-d') }}</td>
                </tr>
            {% endif %}
            </tbody>
        {% endfor %}
    </table>
