<div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">ðŸ“¦ Ajouter un produit dans le stock</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            {{ form_start(form) }}
            <div class="modal-body">
                <div class="container-fluid text-center">
                    <div class="row flex align-items-start justify-content-center">
                        <p class="col">{{ form_row(form.quantity, {'attr': { 'class': 'rounded-3 p-2' }}) }}</p>
                        <p class="col">{{ form_row(form.brand, {'attr': { 'class': 'rounded-3  p-2' }}) }}</p>
                        <p class="col">{{ form_row(form.name, {'attr': { 'class': 'rounded-3  p-2' }}) }}</p>
                        <p class="col">{{ form_row(form.reference, {'attr': { 'class': 'rounded-3  p-2' }}) }}</p>
                        <p class="col">{{ form_row(form.serial_number, {'attr': { 'class': 'rounded-3  p-2' }}) }}</p>
                        <div class="modal-footer">
                            <button class="col btn btn-outline-dark btn-sm">{{ button_label|default('Enregistrer') }}</button>
                            <button type="button" class="btn btn-outline-danger btn-sm" data-bs-dismiss="modal">Fermer</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>