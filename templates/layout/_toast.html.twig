{% for type, messages in app.flashes %}
    {% for message in messages %}
        <div class="toast position-fixed top-0 end-0 m-4 bg-success text-white" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-body d-flex align-item-center">
                <div class="justify-content-center">
                    <i class="fa-regular fa-circle-check" style="color: #8aff97;"></i>
                    {{ message }}
                </div>
            </div>
        </div>
    {% endfor %}
{% endfor %}