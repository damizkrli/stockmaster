<script>
    function copyToClipboard(button) {
        var tableRow = button.parentNode.parentNode;
        var rowData = '';

        for (var i = 0; i < tableRow.cells.length; i++) {
            var cell = tableRow.cells[i];
            if (!cell.classList.contains('exclude-from-clipboard')) {
                rowData += cell.innerText + '\t'; // Ajouter le contenu de la cellule à la ligne de données
            }
        }

        rowData = rowData.slice(0, -1);

        var tempInput = document.createElement("input");
        tempInput.value = rowData;
        document.body.appendChild(tempInput);

        tempInput.select();
        tempInput.setSelectionRange(0, 99999); // Pour les navigateurs mobiles

        document.execCommand("copy");

        document.body.removeChild(tempInput);

        var flashToast = document.getElementById("flash-toast");
        var flashMessage = document.getElementById("flash-message");
        flashMessage.innerText = "Copié dans le presse-papiers.";
        var toast = new bootstrap.Toast(flashToast);
        toast.show();

        var closeButton = flashToast.querySelector(".close");
        closeButton.addEventListener("click", function() {
            var toast = bootstrap.Toast.getInstance(flashToast);
            toast.hide();
        });
    }
</script>
