{% block body %}

    <style>
        .table-bordered {
            border-collapse: collapse;
        }

        .table-bordered th,
        .table-bordered td {
            border: 1px solid black;
            padding: 5px;
        }
    </style>

    <div class="export-product">
        <h1>Stock au {{ "now"|date("d/m/Y") }}</h1>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Désignation</th>
                <th>Référence</th>
                <th>Numéro de Série</th>
                <th>Marque</th>
                <th>Quantité</th>
                <th>Date d'ajout</th>
            </tr>
            </thead>
            <tbody>
            {% for item in data %}
                <tr>
                    <td>{{ item.name | title }}</td>
                    <td>{{ item.reference }}</td>
                    <td>{{ item.serialNumber }}</td>
                    <td>{{ item.brand | title }}</td>
                    <td>{{ item.quantity }} Unité(s)</td>
                    <td>{{ item.addedAt | date('d/m/y') }}</td>
                    <!-- Ajoutez plus de colonnes selon vos besoins -->
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
